<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    android:id="@+id/card_status_bar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?dividerVertical"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin"
        android:showDividers="middle"
        tools:showIn="@layout/content_main">


        <TextView
            android:id="@+id/tv_cards_remaining_to_discard"
            style="@style/TextAppearance.AppCompat.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/activity_half_margin"
            android:layout_marginLeft="@dimen/activity_half_margin"
            android:layout_marginRight="@dimen/activity_half_margin"
            android:layout_marginStart="@dimen/activity_half_margin"
            android:text="@string/cards_to_discard"
            android:textSize="@dimen/button_font_size"
            />

        <TextView
            android:id="@+id/tv_cards_in_deck"
            style="@style/TextAppearance.AppCompat.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/activity_half_margin"
            android:layout_marginLeft="@dimen/activity_half_margin"
            android:layout_marginRight="@dimen/activity_half_margin"
            android:layout_marginStart="@dimen/activity_half_margin"
            android:text="@string/in_deck"
            android:textSize="@dimen/button_font_size"
            />

    </LinearLayout>
</android.support.design.widget.AppBarLayout>